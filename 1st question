#include <bits/stdc++.h>

using namespace std;

int main()
{
    for(int i=1;i<=7;i++){
            for(int k=0;k<i-1;k++){
            cout<<" ";
        }
        for(int j=i;j<=7;j++){
            cout<<j<<" ";
        }
        for(int k=0;k<i;k++){
            cout<<" ";
        }
        cout<<endl;
    }
    for(int i=1;i<7;i++){
        for(int k=7-i;k>1;k--){
            cout<<" ";
        }
        for(int j=7-i;j<=7;j++){
            cout<<j<<" ";
        }
        cout<<endl;
    }
    return 0;
}
